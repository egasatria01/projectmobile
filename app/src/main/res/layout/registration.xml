<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:background="@color/red">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Sign Up you account"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/et_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:minHeight="35dp" />

        <EditText
            android:id="@+id/et_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Mobiile Phone Number"
            android:inputType="textPersonName"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:minHeight="35dp" />

        <EditText
            android:id="@+id/et_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Email"
            android:inputType="textPersonName"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:minHeight="35dp" />

        <EditText
            android:id="@+id/et_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Password"
            android:inputType="textPersonName"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:minHeight="35dp" />

        <EditText
            android:id="@+id/et_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Confirm Password"
            android:inputType="textPersonName"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:minHeight="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_kotak"
                />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:text="By signing up, you agree to R2HEFI of use & Privacy Policy"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/btn_login"
                android:text="Sign Up"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Already signed up?"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:layout_marginRight="0dp"
                />

            <TextView
                android:id="@+id/tv10"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/blue2"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="Sign In" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>